<div class="container center-align">

  <h5>Sign Up Now!</h5>

  <div class="row">
      <div class="col s12 m8 offset-m2">

       <%= form_for :user do |f| %>
        <%= f.text_field :name, placeholder: "Enter your name"%>
        <%= f.text_field :password, placeholder: "Enter your password", type: "password"%>
        <%= f.submit "Create", class: "waves-light btn" %>

      <% end %>

      </div>
  </div>

</div>